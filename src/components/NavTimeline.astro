
---
const items = [
  { href: '/', label: 'Home' },
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

// Get current path for active state
const currentPath = Astro.url.pathname;
---
<nav class="w-full flex flex-col items-center gap-4 py-8 pt-10">
  <a href="/" class="block group">
    <img 
      src="/whit-site-logo.svg" 
      alt="Whit Cooper logo" 
      class="h-16 transition-transform duration-300 group-hover:scale-110" 
    />
  </a>
  
  <div class="relative flex items-center gap-8">
    {items.map(({href, label}) => {
      const isActive = currentPath === href;
      return (
        <a 
          href={href} 
          class="group flex flex-col items-center relative"
          aria-current={isActive ? 'page' : undefined}
        >
          <span class={`
            w-3 h-3 rounded-full transition-all duration-300 ease-out
            ${isActive 
              ? 'bg-fg scale-125 shadow-lg shadow-fg/20' 
              : 'bg-fg/50 group-hover:bg-fg group-hover:scale-110'
            }
          `}></span>
          <span class={`
            mt-3 text-xs font-medium transition-all duration-300
            ${isActive 
              ? 'opacity-100 text-fg' 
              : 'opacity-60 group-hover:opacity-100 group-hover:text-fg'
            }
          `}>
            {label}
          </span>
          
          {/* Active indicator line */}
          {isActive && (
            <div class="absolute -bottom-1 left-1/2 w-1 h-1 bg-fg rounded-full transform -translate-x-1/2 animate-pulse"></div>
          )}
        </a>
      );
    })}
    
    {/* Timeline line with improved styling */}
    <div class="absolute -z-10 left-0 right-0 h-px bg-gradient-to-r from-transparent via-fg/20 to-transparent top-1.5"></div>
  </div>
</nav>
