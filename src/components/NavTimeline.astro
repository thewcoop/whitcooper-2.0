
---
const items = [
  { href: '/', label: 'Home' },
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---
<nav class="w-full flex flex-col items-center gap-3 py-6">
  <a href="/" class="block">
    <img src="/whit-site-logo.svg" alt="Whit Cooper logo" class="h-8" />
  </a>
  <div class="relative flex items-center gap-6">
    {items.map(({href, label}) => (
      <a href={href} class="group flex flex-col items-center">
        <span class="w-2 h-2 rounded-full bg-fg/70 group-hover:bg-fg transition-colors"></span>
        <span class="mt-2 text-xs opacity-70 group-hover:opacity-100 transition-opacity">{label}</span>
      </a>
    ))}
    <div class="absolute -z-10 left-0 right-0 h-px bg-fg/20 top-1"></div>
  </div>
</nav>
