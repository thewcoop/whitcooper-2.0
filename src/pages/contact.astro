<style>
  /* Contact bubble base styles */
  .contact-bubble {
    position: relative;
    overflow: hidden;
    background: rgba(255,255,255,0.06);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    box-shadow: 0 1px 0 rgba(255,255,255,0.05) inset, 0 20px 50px rgba(0,0,0,0.4);
    transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .contact-bubble::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    transition: left 0.8s ease;
  }

  .contact-bubble:hover::before {
    left: 100%;
  }

  /* SoundCloud gradient */
  .soundcloud-bubble:hover {
    background: linear-gradient(135deg, #ff7700, #ff5500);
    transform: scale(1.05);
    box-shadow: 0 25px 60px rgba(255, 119, 0, 0.3);
  }

  /* Instagram gradient */
  .instagram-bubble:hover {
    background: linear-gradient(135deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
    transform: scale(1.05);
    box-shadow: 0 25px 60px rgba(220, 39, 67, 0.3);
  }

  /* LinkedIn gradient */
  .linkedin-bubble:hover {
    background: linear-gradient(135deg, #0077b5, #00a0dc);
    transform: scale(1.05);
    box-shadow: 0 25px 60px rgba(0, 119, 181, 0.3);
  }

  /* Email gradient */
  .email-bubble:hover {
    background: linear-gradient(135deg, #34a853, #0f9d58);
    transform: scale(1.05);
    box-shadow: 0 25px 60px rgba(52, 168, 83, 0.3);
  }

  /* Icon color transitions on hover */
  .contact-bubble:hover svg {
    color: white !important;
  }

  /* Smooth scale animation */
  .contact-bubble {
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .contact-bubble:hover {
    transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }
</style>
